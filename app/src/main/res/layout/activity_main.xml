<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0.5dp"
    android:background="@color/colorPrimary"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50dp"
            android:inputType="text"
            android:text="@string/hint_username"
            android:textColor="@color/white"
            android:textSize="@dimen/username_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnClockIn"
                android:layout_width="@dimen/clockin_btn_width"
                android:layout_height="@dimen/clockin_btn_height"
                android:src="@drawable/btn_clockin" />

            <ImageView
                android:id="@+id/btnStart"
                android:layout_width="@dimen/clockin_btn_width"
                android:layout_height="@dimen/clockin_btn_height"
                android:layout_marginTop="@dimen/margin_20dp"
                android:src="@drawable/btn_start" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
